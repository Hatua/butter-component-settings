.settings
    background-color: var(--Window-bg)
    color: var(--Font-color)
    font-family: var(--Font-family)
    overlay(absolute)
    scrollable()
    font-faimily: (--Font-family)


    &::-webkit-scrollbar-track
        margin-top: calc( var(--Tabs-height) + var(--Navbar-height) + 20px )

    &.show-advanced
        .settings-row
            &.advanced
                height: auto !important
                opacity: 1 !important
                overflow: visible !important
                padding: 35px 20px !important
                transform: scale(1) !important

.footer
    margin: 25px auto
    max-width: 980px
    display: flex;
    justify-content: center;
    align-items: center
    flex-flow: row wrap;

@import './global.styl'
